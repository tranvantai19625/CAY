#include <stdio.h>
#define MAX 100

typedef struct {
    int data[MAX];
    int used[MAX];
} BinaryTree;

void initTree(BinaryTree *t) {
    for (int i = 0; i < MAX; i++) {
        t->used[i] = 0;
    }
}

int isEmpty(BinaryTree *t) {
    return t->used[1] == 0;
}

void insertRoot(BinaryTree *t, int x) {
    t->data[1] = x;
    t->used[1] = 1;
}

void insertLeft(BinaryTree *t, int i, int x) {
    if (t->used[i] == 0) {
        printf("khong ton tai!\n");
        return;
    }
    int left = 2 * i;
    if (left >= MAX) return;
    t->data[left] = x;
    t->used[left] = 1;
}

void insertRight(BinaryTree *t, int i, int x) {
    if (t->used[i] == 0) {
        printf("khong ton tai!\n");
        return;
    }
    int right = 2 * i + 1;
    if (right >= MAX) return;
    t->data[right] = x;
    t->used[right] = 1;
}

void truoc(BinaryTree *t, int i) {
    if (i >= MAX || t->used[i] == 0) return;
    printf("%d ", t->data[i]);
    truoc(t, 2 * i);
    truoc(t, 2 * i + 1);
}

void giua(BinaryTree *t, int i) {
    if (i >= MAX || t->used[i] == 0) return;
    giua(t, 2 * i);
    printf("%d ", t->data[i]);
    giua(t, 2 * i + 1);
}

void sau(BinaryTree *t, int i) {
    if (i >= MAX || t->used[i] == 0) return;
    sau(t, 2 * i);
    sau(t, 2 * i + 1);
    printf("%d ", t->data[i]);
}

int main() {
BinaryTree t;
initTree(&t);


insertRoot(&t, 1);
insertLeft(&t, 1, 2);
insertRight(&t, 1, 3);
insertLeft(&t, 2, 4);
insertRight(&t, 2, 5);


printf("thu tu truoc : ");
truoc(&t, 1);
printf("\n");


printf("thu tu giua : ");
giua(&t, 1);
printf("\n");


printf("thu tu sau: ");
sau(&t, 1);
printf("\n");


return 0;
}
